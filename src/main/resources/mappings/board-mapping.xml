<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDAO">
    <insert id="insertBoard">insert into board2(title,writer,content,bdate,file) values(#{title},#{writer},#{content},now(),#{filepath})</insert>
    <select id="selectOne" resultType="board">select * from board2 where bid=#{bid}</select>
    <select id="selectAll" resultType="board">select * from board2 where writer like '%'||#{searchContent}||'%' order by bid desc</select>
    <update id="updateBoard">update board2 set title=#{title},content=#{content} where bid=#{bid}</update>
    <delete id="deleteBoard">delete board2 where bid=#{bid}</delete>
</mapper>
